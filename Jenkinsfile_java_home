pipeline {
    agent any
    tools {
        // Install the Maven version configured as "Maven3.9.12" and add it to the path.
        maven "Maven3.9.12"
    }


    stages {
        stage('Initialize JDK') {
            steps {
                script {
                    // Récupère le chemin d'installation de l'outil nommé 'JDK11'
                    def jdkPath = tool name: 'Coretto-17', type: 'jdk'

                    // Applique JAVA_HOME uniquement pour ce bloc d'instructions
                    withEnv(["JAVA_HOME=${jdkPath}", "PATH+JAVA=${jdkPath}/bin"]) {
                        sh 'mvn clean package'
                    }
                }
            }
        }
    }
}
