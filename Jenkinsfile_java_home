pipeline {
    agent any
    tools {
        maven "Maven3.9.12"
    }
    stages {
        stage('Initialize JDK') {
            steps {
                script {
                    // Manually resolve and set JAVA_HOME
                    def javaHome = tool name: 'Corretto-17', type: 'jdk'

                    withEnv(["JAVA_HOME=${javaHome}", "PATH+JAVA=${javaHome}/bin"]) {
                        sh 'echo "JAVA_HOME=$JAVA_HOME"'
                        sh 'java -version'
                        sh 'mvn clean package'
                    }
                }
            }
        }
    }
}
