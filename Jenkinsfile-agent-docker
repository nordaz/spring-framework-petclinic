pipeline {
    agent none

    stages {
        stage('Build Java') {
            agent {
                docker {
                    image 'maven:3.9-eclipse-temurin-21'
                    args '-v $HOME/.m2:/root/.m2'
                }
            }
            steps {
                sh 'mvn clean package'
                stash includes:"target/*.war", name: 'petclinic'

            }
        }
    }
}
