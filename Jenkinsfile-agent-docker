pipeline {
    agent any

    stages {
        stage('Build Java') {
            agent {
                docker {
                    image 'maven:3.9-eclipse-temurin-21'
                    args '-v $HOME/.m2:/root/.m2'
                }
            }
            steps {
                sh 'mvn clean package -DskipTests'
                stash includes: "target/*.war", name: 'petclinic'

            }
        }
    }
    post {
        always {
        echo "nettoyage"
            cleanWs()
        }
    }
}
